generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Order {
  id         String   @id @default(uuid()) @db.Uuid
  customerId String   @db.Uuid
  total      Float
  createdAt  DateTime @default(now())
  customer   Customer @relation(fields: [customerId], references: [id])
}

model Customer {
  id     String  @id @default(uuid()) @db.Uuid
  name   String
  email  String  @unique
  phone  String?
  orders Order[]
}
